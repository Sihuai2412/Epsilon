{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Epsilon.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "epsi",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/samples",
                "shell": {
                    "executable": "powershell.exe",
                    "args": ["-NoProfile", "-Command"]
                }
            },
            "command": "& { dotnet run --project \"${workspaceFolder}/src/epsilon.Compiler\" -- \"${file}\" -r \"${workspaceFolder}/libs/mscorlib.dll\"; & \"${fileDirname}\\${fileBasenameNoExtension}.exe\" }",
            "presentation": {
                "focus": true,
                "panel": "shared",
                "clear": true,
                "echo": true
            }
        }
    ]
}